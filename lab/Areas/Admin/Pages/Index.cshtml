@page
@model lab.Areas.Admin.Pages.IndexModel

@{
    ViewData["Title"] = "Index";
}

<p>
    <a asp-page="Create" class="btn btn-outline-info">
        <span class="fa fa-plus-circle">Create new</span>
    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.MusInstrument[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MusInstrument[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MusInstrument[0].Brand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MusInstrument[0].Group)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.MusInstrument) {
        <tr>
            <td>
                <img src="~/Images/@item.Image" alt="NoImage" width="50" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Brand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Group.Name)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-outline-info">
                    <span class="fas fa-edit"></span>
                </a>
                <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">
                    <span class="fas fa-trash-alt"></span>
                </a>
            </td>
        </tr>
        }
    </tbody>
</table>
